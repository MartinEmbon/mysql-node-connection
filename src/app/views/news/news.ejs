<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <title>News</title>
</head>
<body>
    <nav class="navbar navbar-dark bg-dark">
        <a href="" class="navbar-brand mx-auto">News</a>
      </nav>
  
  <div class="container">
    <div class="row">
        <div class="col-md-6 mt-4 text-center">
          <table class="table table-striped table-bordered">
            <tr>
              <th>ID</th>
              <th>Title</th>
              <th>News</th>
              <th>Accion</th>
            </tr>
            <% for (var i = 0; i < news.length; i ++) { %>
              <tr>
                <td><%= news[i].id_news %></td>
                <td><%= news[i].title %></td>
                <td><%= news[i].news %></td>
                <td><a class="btn btn-danger" href="/<%=news[i].id_news%>">Delete</a></td>
              </tr>              
            <% } %>
          </table>
        </div>

        <div class="col-md-6 card">
            <form action="/news" method="POST" class="card-body">
                <h3 class="card-title">Add News</h3>
                <div class="form-group">
                    <input id="title" type="text" name="title" 
                    placeholder="Title" class="form-control">
                </div>
                <input type="text" name="news" 
                placeholder="News" class="form-control">
                <input type="submit" value="Enviar" class="mb-2 mt-2 btn btn-primary">
            </form>
        </div>
    </div>



  </div>

  <script>
      document.getElementById("title").focus()
  </script>

</body>
</html>